    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Engine+GUI",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${env:MONTAGE_SOURCE}/cmd/montage_engine/montage_engine.go",
            "env": {
                "Path": "${env:Path};${workspaceFolder};%{env:MONTAGE}"             },
            "args": []
        },
        {
            "name": "Launch ISF",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${env:MONTAGE_SOURCE}/cmd/montage_isf/montage_isf.go",
            "env": {
                "Path": "${env:Path};${workspaceFolder};%{env:MONTAGE}"             },
            "args": []
        },
        {
            "name": "Launch Python GUI",
            "type": "python",
            "request": "launch",
            "program": "${env:USERPROFILE}/github/montage/python/montage_gui.py",
            "env": {},
            "args": []
        }
    ]
}
